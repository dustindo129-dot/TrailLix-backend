# ==============================================
# TrailLix Backend - Production Environment
# Copy this to .env.production and fill in values
# ==============================================

# Application
NODE_ENV=production
PORT=3000
API_PREFIX=api

# Database - Use managed PostgreSQL (Neon, Supabase, AWS RDS, etc.)
DATABASE_URL="postgresql://user:password@host:5432/traillix?schema=public&connection_limit=10&pool_timeout=20"

# Redis - Use managed Redis (Upstash, AWS ElastiCache, Redis Cloud)
REDIS_HOST=your-redis-host.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# JWT Secrets - MUST be changed in production
JWT_SECRET=your-production-jwt-secret-min-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-production-refresh-jwt-secret-min-32-characters
JWT_REFRESH_EXPIRES_IN=7d

# CORS - Specify allowed origins
CORS_ORIGIN=https://traillix.com,https://www.traillix.com,https://app.traillix.com

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# AWS S3 - For file uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=traillix-production-storage

# Email - Gmail SMTP Configuration
# For Gmail, you need to:
# 1. Enable 2-Step Verification on your Google Account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the App Password (16 characters) as SMTP_PASS, NOT your regular Gmail password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-character-app-password
FROM_EMAIL=your-email@gmail.com

# Alternative: Use port 465 with SSL (set SMTP_SECURE=true)
# SMTP_PORT=465
# SMTP_SECURE=true

# Vietnamese Bank Payment (Manual QR Code Payment)
VN_BANK_NAME=Vietcombank
VN_BANK_ACCOUNT=1234567890
VN_BANK_ACCOUNT_NAME=CONG TY TRAILLIX
QR_PAYMENT_TIMEOUT=15

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_CORS=true

# Monitoring
LOG_LEVEL=info

